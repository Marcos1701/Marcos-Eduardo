@model IEnumerable<MarcosEduardo.Models.NotaDeVenda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Transportadora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoDePagamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (item.Cliente != null)
                    {
                        @Html.DisplayFor(modelItem => item.Cliente.Nome)
                    }
                </td>
                <td>
                    @if (item.Vendedor != null)
                    {
                        @Html.DisplayFor(modelItem => item.Vendedor.Nome)
                    }
                </td>
                <td>
                    @if (item.Transportadora != null)
                    {
                        @Html.DisplayFor(modelItem => item.Transportadora.Nome)
                    }
                </td>
                <td>
                    @if (item.TipoDePagamento != null)
                    {
                        @Html.DisplayFor(modelItem => item.TipoDePagamento.NomeDoCobrado)
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
